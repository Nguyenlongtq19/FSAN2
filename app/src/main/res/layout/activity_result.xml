<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:background="@drawable/bg1">

    <TextView
        android:id="@+id/txtTitle"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="ĐÃ ĐIỂM DANH !"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/bgGreen">
    </TextView>

    <LinearLayout
        android:id="@+id/lytImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/phoneText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:id="@+id/imageEnrolled"
            android:layout_width="150dp"
            android:layout_height="150dp">
        </ImageView>

        <ImageView
            android:id="@+id/imageIdentified"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytImagesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/lytImages"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:textStyle="bold"
            android:text="Đăng ký"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/bgGreen"
            >
        </TextView>

        <TextView
            android:textStyle="bold"
            android:text="Điểm danh"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/bgGreen"
            >
        </TextView>
    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và tên: Person1"
        android:textSize="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idText"
        android:textColor="@color/bgGreen"
        >
    </TextView>

    <TextView
        android:textStyle="bold"
        android:id="@+id/idText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MSHS: 00000000"
        android:textSize="18dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        android:textColor="@color/bgGreen"
        >
    </TextView>

    <TextView
        android:textStyle="bold"
        android:id="@+id/phoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SĐT phụ huynh: 000000000000"
        android:textSize="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameText"
        android:textColor="@color/bgGreen"
        >
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>